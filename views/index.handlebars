<div class="container">

  <div class="row">

    <h1 class="col s12 center">Burgers!</h1>

  </div>

  <div class="row">

    <div class="col s12 m6 available">
      <h3>Available Burgers</h3>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col s12 m6 devoured">
      <h3>Eaten Burgers</h3>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>

  <div class="row">
    <h2 class="col s12 center">Add a Burger</h2>
    <form action="">

      <div class="input-field col s12 m6 offset-m3">
        <input placeholder="Enter the Name of a Burger" id="burger" type="text" class="validate">
      </div>
      <button class="btn btn-small" id="add_burger">Add</button>

    </form>



  </div>

</div>